{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "linebreak-style": "off",
      "max-len":"off",
      "arrow-parens": "off",
      "no-return-assign": "off", // disallow use of assignment in return statement
      "no-plusplus": "off",
      "quotes": "off",
      "consistent-return": "off",
      "arrow-body-style": "off",
      "react/react-in-jsx-scope": "off",
      "react/jsx-filename-extension": "off"
    }
}
